<div id= "h1-banner">
  <h1 id ="speak-up">Speak UP </h1>
</div>

<div id="video-background">
<%= video_tag "townhallmv.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "video" %>
</div>

<div style='width: 800px;'>
  <div id="geolocation" style='width: 800px; height: 400px;'></div>
</div>


<%= form_tag(events_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
<%= submit_tag "Search" %>
<% end %>

<div id= "h2-banner">
  <h2 id ="directions">Enter your town or zip code to search upcoming town hall meetings near you:</h2>
</div>
